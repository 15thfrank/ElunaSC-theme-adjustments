<h1 class="title clearfix" role="banner">

  {% if section.settings.logo %}
    {% capture image_height %}x{{ section.settings.logo-height }}{% endcapture %}
    {% assign key = section.settings.logo %}
    {% assign alt = section.settings.logo.alt %}

    <a href="/" role="banner" title="{{ shop.name }}">
      {% include 'hs-image-utils' with image: key %}<img alt="{{ alt | default: shop.name }}" class="logo-image lazyload hs-lazyload hs-id-61df2dd2" data-aspectratio="{{ hs_aspect_ratio }}" data-parent-fit="contain" data-sizes="auto" data-srcset="{{ key | img_url: image_height }} 1x,
                   {{ key | img_url: image_height, scale: 2 }} 2x" itemprop="logo" src="{{ key | img_url: image_height }}" srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" style=";max-width: 100%;min-width: 80%;"/>
    </a>
  {% else %}
    <a class="font--logo" href="/">{{ shop.name }}</a>
  {% endif %}
</h1>